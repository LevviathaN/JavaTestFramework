<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CodeEditor.CodeEditor">
   <center>
      <VBox>
         <children>
            <WebView fx:id="webview" minHeight="-Infinity" minWidth="-Infinity" onKeyReleased="#updateInvalidLocators" prefHeight="314.0" prefWidth="583.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </WebView>
            <HBox>
               <children>
                  <Button fx:id="copyCode" mnemonicParsing="false" onAction="#setCode" text="Set Feature Template" />
                  <Button fx:id="createFeature" mnemonicParsing="false" onAction="#createNewFeature" text="Save feature file" />
                  <Button fx:id="debugButton" mnemonicParsing="false" onAction="#debugButtonListener" text="Debug Button" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <Label fx:id="labeledCode" graphicTextGap="5.0" lineSpacing="1.0" text="Invalid locators" />
                        <ComboBox fx:id="locatorComboBox" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Invalid stepdefs" />
                        <ComboBox fx:id="stepdefComboBox" prefHeight="27.0" prefWidth="310.0" />
                     </children></VBox>
               </children>
            </HBox>
         </children>
      
      </VBox>
   </center>
   <left>
      <TreeView fx:id="fileTreeView" prefWidth="245.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Valid Locators Suggestions" />
            <ListView fx:id="predictedLocatorsList" editable="true" prefWidth="230.0" />
            <Label text="Valid Stepdefs Guggestions" />
            <ListView fx:id="predictedStepdefsList" prefWidth="200.0" />
         </children>
      </VBox>
   </right>
</BorderPane>
